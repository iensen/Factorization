package com.example.multithread;

import android.util.Log;

public class TaskCounter {



	private int runningTasksCount;

	public TaskCounter() {
		this.runningTasksCount = 0;
	}
	
	public void addTask(FactorizationTask task)
	{
		runningTasksCount++;
		Log.v("", "Task "+task.toString() +" is going to start");
	}
	
	public void removeTask(FactorizationTask task)
	{
		Log.v("", "Task "+task.toString() +" was finished");
		runningTasksCount--;		
	}
	
	public int getRunningTasksCount() {
		return runningTasksCount;
	}
	
	
}
